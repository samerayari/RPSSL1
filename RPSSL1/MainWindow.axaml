<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="RPSSL1.MainWindow"
        Width="400" Height="350"
        Title="RPSSL Game">

    <StackPanel Margin="10">

        <TextBlock Text="Rock Paper Scissors Spock Lizard" FontSize="18" Margin="0 0 0 10"/>

        <StackPanel Orientation="Horizontal" Spacing="5">
            <Button Content="Rock" Click="Rock_Click"/>
            <Button Content="Paper" Click="Paper_Click"/>
            <Button Content="Scissors" Click="Scissors_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="5" Margin="0 5 0 5">
            <Button Content="Lizard" Click="Lizard_Click"/>
            <Button Content="Spock" Click="Spock_Click"/>
        </StackPanel>

        <TextBlock x:Name="ResultText" Text="Press a button to play." Margin="0 10 0 5"/>
        <TextBlock x:Name="ScoreText" Text="Score: You 0 - 0 Agent"/>

    </StackPanel>
</Window>